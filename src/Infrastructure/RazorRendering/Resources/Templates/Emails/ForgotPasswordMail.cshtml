@model Application.Common.RazorModels.ForgotPasswordEmailModel
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Restablecé tu contraseña</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 20px auto;
            background: #ffffff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .header {
            background: #0078D4;
            color: white;
            padding: 15px;
            text-align: center;
            font-size: 20px;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .content {
            padding: 20px;
            color: #333;
            text-align: center;
        }

        .footer {
            background: #f4f4f4;
            padding: 15px;
            font-size: 12px;
            text-align: center;
            color: #666;
            border-bottom-left-radius: 10px;
            border-bottom-right-radius: 10px;
        }

        .button {
            display: inline-block;
            padding: 10px 20px;
            margin-top: 15px;
            background-color: #0078D4;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
        }

            .button:hover {
                background-color: #005ea6;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">Restablecé tu contraseña</div>
        <div class="content">
            <p>Hola @(Model.FirstName + " " + Model.LastName),</p>
            <p>Recibimos una solicitud para restablecer la contraseña de tu cuenta.</p>
            <p>Si fuiste vos, hacé clic en el siguiente enlace para crear una nueva contraseña:</p>
            <a href="@Model.RegistrationUrl" class="button">Restablecer contraseña</a>
            <p style="margin-top:20px;">Si no realizaste esta solicitud, podés ignorar este mensaje.</p>
        </div>
        <div class="footer">
            Este es un mensaje automático de <strong>Template Append</strong>. Por favor, no respondas a este correo.
        </div>
    </div>
</body>
</html>
